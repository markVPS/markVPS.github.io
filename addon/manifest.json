{
  "manifest_version": 2,
  "name": "TwoColumn Link Scraper (Aesthetics Wiki)",
  "version": "1.0.0",
  "description": "Adds a button to download all links inside div.twocolumn from the List of Aesthetics page.",
  "permissions": ["activeTab", "downloads"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://aesthetics.fandom.com/wiki/List_of_Aesthetics*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
