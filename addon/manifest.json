{
  "manifest_version": 2,
  "name": "Aesthetics: Lists â†’ TSV/JSON",
  "version": "1.3.0",
  "description": "Collect full aesthetics list (all .twocolumn blocks) and Category groups; save TSVs + JSON.",
  "permissions": [
    "downloads",
    "tabs",
    "https://aesthetics.fandom.com/*"
  ],
